<div class="container">



  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "sharedpartials/errors", obj: @user %>
      <%= form_with(model: @user, local:true, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
      <div class="input-group row mb-3">
        <%= f.label :username, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>

        </div>
      </div>

      <div class="input-group row mb-3">
        <%= f.label :email, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter email" %>
        </div>
      </div>
      <div class="input-group row mb-3">
        <%= f.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter Password" %>
        </div>
      </div>

      <div class="input-group justify-content-center mb-3">
        <%= f.submit "Sign Up", class: "btn btn-outline-light btn-lg" %>
      </div>

      <% end %>
    </div>

    <%= link_to('[ Cancle and return to article listing ]', articles_path, class: "text-center text-info") %>
  </div>
</div>
